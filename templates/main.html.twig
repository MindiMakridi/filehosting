{%extends 'layout.html.twig' %}
{% block page_title%} Recent Uploads {% endblock %}
{% block main_class %} class="active" {% endblock %}
{% block content %}
<div class="jumbotron">
    <table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Размер</th>
            <th>Дата загрузки</th>
        </tr>
    </thead>
    <tbody>
        {% for file in files%}
        <tr>
            <td>
                <a href="/files/{{file.getId()}}">{{file.getOriginalName()}}</a>
            </td>
            <td>
                {{filesHelper.getFormattedSize(file)}}
            </td>
            <td>
                {{filesHelper.getFormattedTime(file)}}
            </td>
            {% endfor %}
    </tbody>
</div>
{% endblock %}